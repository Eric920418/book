generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Answer {
  id         String     @id
  resultId   String
  optionId   String
  createdAt  DateTime   @default(now())
  Option     Option     @relation(fields: [optionId], references: [id])
  QuizResult QuizResult @relation(fields: [resultId], references: [id], onDelete: Cascade)

  @@unique([resultId, optionId])
}

model Author {
  id        String   @id
  name      String
  biography String
  photo     String?
  email     String?
  website   String?
  createdAt DateTime @default(now())
  updatedAt DateTime
  Book      Book[]
}

model Book {
  id          String    @id
  title       String
  description String
  coverImage  String?
  audioUrl    String?
  publishDate DateTime?
  isbn        String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  authorId    String
  Author      Author    @relation(fields: [authorId], references: [id])
}

model Option {
  id         String   @id
  text       String
  score      Int      @default(0)
  order      Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime
  questionId String
  Answer     Answer[]
  Question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model Question {
  id        String   @id
  text      String
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime
  quizId    String
  Option    Option[]
  Quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model Quiz {
  id          String       @id
  title       String
  description String?
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime
  Question    Question[]
  QuizResult  QuizResult[]
}

model QuizResult {
  id         String   @id
  email      String
  totalScore Int
  resultData Json
  createdAt  DateTime @default(now())
  quizId     String
  Answer     Answer[]
  Quiz       Quiz     @relation(fields: [quizId], references: [id])
}

// MAIA-2 測驗結果資料表
// 儲存用戶主動分享的測驗結果（填寫 email 者）
model MAIA2Result {
  id              String   @id @default(cuid())
  email           String   // 用戶填寫的 email

  // 8 個覺察面向分數（0-5分）
  dimensionScores Json     // { noticing: 3.25, notDistracting: 2.83, ... }

  // 測驗完成時間
  completedAt     DateTime

  // 其他元數據
  metadata        Json?    // { userAgent, submittedAt, ... }

  // 創建時間（資料庫記錄時間）
  createdAt       DateTime @default(now())

  @@index([email])
  @@index([createdAt])
  @@map("maia2_results")
}
