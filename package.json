{
  "name": "book-showcase",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && NODE_OPTIONS='--max-old-space-size=512' next build",
    "start": "next start",
    "lint": "eslint",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx scripts/init-db.ts",
    "db:studio": "prisma studio",
    "db:setup": "prisma db push && tsx scripts/init-db.ts",
    "cf:build": "opennextjs-cloudflare build",
    "cf:dev": "wrangler dev",
    "cf:preview": "opennextjs-cloudflare preview",
    "cf:deploy": "opennextjs-cloudflare deploy",
    "cf:d1:create": "wrangler d1 create book-showcase-db",
    "cf:d1:migrate": "wrangler d1 execute book-showcase-db --local --file=./prisma/migrations/init.sql",
    "cf:d1:migrate:prod": "wrangler d1 execute book-showcase-db --remote --file=./prisma/migrations/init.sql"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@opennextjs/cloudflare": "^1.14.6",
    "@prisma/adapter-d1": "^7.1.0",
    "@prisma/client": "^6.17.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.2",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.1",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.2",
    "next": "16.0.10",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.10.1",
    "prisma": "^6.17.1",
    "react": "19.2.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.2.1",
    "react-hook-form": "^7.65.0",
    "resend": "^6.6.0",
    "wrangler": "^4.54.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
